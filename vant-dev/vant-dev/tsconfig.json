{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@demo/*": ["docs/site/*"]
    }
  },
  "include": ["src/**/*", "types/**/*", "docs/**/*", "test/**/*"]
}
